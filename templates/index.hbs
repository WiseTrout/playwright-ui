<h1>
    {{title}} menu
</h1>
<form action="/run-tests" method="post" enctype="multipart/form-data">
<a href="/settings">⚙️ Update settings</a>
    <div>
        <h2>
            Tests:
        </h2>
        <ul>
            {{#each globalSettings}}
            <li>
                <h3>{{this.label}}</h3>
                {{> input input=this}}
            </li>
            {{/each}}
            {{#each testSuites}}
                <li>
                
                    <h3 class="accordion" onclick="this.classList.toggle('expanded')">{{this.title}}</h3>
                    <div>
                        <button type="button" onclick="selectAll(this.parentNode)">Select all</button>
                    <button type="button" onclick="selectNone(this.parentNode)">Select none</button>
                    <br>
                    {{#each this.categories}}
                         <label>
                            <input type="checkbox" name="{{this.inputName}}">
                            {{this.title}} 
                        </label>
                        <br >
                    {{/each}}
                    </div>
                    
                </li>
                {{/each}}
        </ul>
    </div>
    <div>
        <h2>
            Browsers:
        </h2>
        <button type="button"  onclick="selectAll(this.parentNode)">Select all</button>
        <button type="button"  onclick="selectNone(this.parentNode)">Select none</button>
        <br>
            {{#each browsers}}
                <label>
                    <input 
                    type="checkbox" 
                    name="browser--{{this.name}}" 
                    {{#if this.defaultChecked}}checked{{/if}}>
                    {{this.name}} 
                </label>
                <br>
            {{/each}}
    </div>
    <ul>

        <button>Run tests</button>
    </ul>

    

</form>

<script src="/js/index.js"></script>