{{#if input.isCheckbox}}
    <label>
        <input 
        type="checkbox"
        {{#if input.defaultSelected}} checked {{/if}}
        name="{{input.name}}"
        >
        {{input.label}}
    </label>
{{else}}
    <h3>{{input.label}}</h3>
    {{#if input.isSelect}}
        <select name="{{input.name}}" aria-label="{{input.label}}">
            {{#each input.options}}
            <option value="{{this.value}}" {{#if this.defaultSelected}} selected {{/if}}>{{this.label}}</option>
            {{/each}}
        </select>
    {{/if}}
    {{#if input.isRadio}}
        {{#each input.options}}
            <label>
                <input
                type="radio"
                value="{{this.value}}"
                name="{{this.name}}"
                {{#if this.defaultSelected}} checked {{/if}}
                >
                {{this.label}}
            </label>
            <br>
        {{/each}}
    {{/if}}
    
    {{#if input.isSimple}}
        <input 
        type="{{input.type}}" 
        value="{{input.defaultValue}}" 
        name="{{input.name}}"
        aria-label="{{input.label}}"
        {{#if input.required}} required {{/if}}
        >
    {{/if}}

{{/if}}